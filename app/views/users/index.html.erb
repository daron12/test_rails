<h1 align="center">ALL My application users</h1>
<div align="center">
	<%= will_paginate %>
</div>
<div align="center">
	<% @users.each do |user| %>
	<ul class="listing">
		<div class="row">
			<div class="well col-md-4 col-md-offset-4">
				<li>
					<%= link_to(gravatar_for(user),user_path(user)) %>
				</li>
				<li class="article-title">
					<%= link_to(user.username,user_path(user)) %>
				</li>
				<li>
					<small><%= pluralize(user.articles.count,"article") if user.articles %></small>
				</li>
				<% if logged_in? and current_user.admin? %>
				<li>
					<%= link_to "Delete this user",user_path(user),class:"btn btn-xs btn-danger",method: :delete,data: {confirm:"are you sur"} %>
				</li>
				<% end %>
			</div>
		</div>
	</ul>
	<% end %>
</div>
<div align="center">
	<%= will_paginate %>
</div>